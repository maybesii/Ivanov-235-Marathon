<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="678.0" prefWidth="813.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pr.ivanov.task.controllers.runnerMenuController">
   <top>
      <GridPane fx:id="gridTop" prefHeight="44.0" prefWidth="600.0" style="-fx-background-color: #9c9c9c;" xmlns:fx="http://javafx.com/fxml/1">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="0">
               <children>
                  <Button onAction="#onClickCancel" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-background-color: #e8e8e8;" text="Back" />
               </children>
               <padding>
                  <Insets left="15.0" />
               </padding>
            </HBox>
            <HBox alignment="CENTER" GridPane.columnIndex="1">
               <children>
                  <Label style="-fx-font-size: 25; -fx-font-weight: bold;" text="Marathon Skills 2016" textFill="#ececec" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" GridPane.columnIndex="2">
               <children>
                  <Button onAction="#goToHome" style="-fx-font-size: 14; -fx-background-radius: 5; -fx-background-color: #e8e8e8;" text="Logout" />
               </children>
               <padding>
                  <Insets right="15.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </top>
   <center>
      <GridPane fx:id="gridCenter" style="-fx-background-color: #d9d9d9;" VBox.vgrow="ALWAYS">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <VBox alignment="CENTER" spacing="30">
               <children>
                  <VBox alignment="TOP_CENTER" spacing="20.0">
                     <children>
                        <Label style="-fx-font-size: 30;" text="Меню бегуна" />
                        <HBox alignment="CENTER" spacing="15.0" />
                        <VBox alignment="CENTER" prefHeight="200.0" spacing="30.0">
                           <children>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button style="-fx-font-size: 22; -fx-background-radius: 7; -fx-background-color: #a6a6a6; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50;" text="Регистрация на марафон" />
                                    <Button style="-fx-font-size: 22; -fx-background-radius: 7; -fx-background-color: #a6a6a6; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50;" text="Мои результаты" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button style="-fx-font-size: 22; -fx-background-radius: 7; -fx-background-color: #a6a6a6; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50;" text="Редактирование профиля" />
                                    <Button style="-fx-font-size: 22; -fx-background-radius: 7; -fx-background-color: #a6a6a6; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50;" text="Мои спонсоры" />
                                 </children>
                              </HBox>
                              <HBox alignment="CENTER">
                                 <children>
                                    <Button onAction="#onClickcontacts" style="-fx-font-size: 22; -fx-background-radius: 7; -fx-background-color: #a6a6a6; -fx-text-fill: white; -fx-pref-width: 200; -fx-pref-height: 50;" text="Контакты" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </VBox>
               </children>
            </VBox>
         </children>
      </GridPane>


   </center>
   <bottom>
      <GridPane fx:id="gridBottom" prefHeight="61.0" style="-fx-background-color: #9c9c9c;">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="30.0" vgrow="ALWAYS" />
         </rowConstraints>
         <children>
            <HBox fx:id="mainVBox" alignment="CENTER" fillHeight="true">
               <children>
                  <Label fx:id="marathonLabel" style="-fx-font-size: 16;" text="8 дней 18 часов 18 минут до старта марафона!" />
               </children>
               <padding>
                  <Insets bottom="5.0" />
               </padding>
            </HBox>
         </children>
      </GridPane>
   </bottom>
